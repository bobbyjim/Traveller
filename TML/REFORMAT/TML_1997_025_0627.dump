    'subj' => 'Tech Levels Ideas (Long..but worth it)',
    'mo' => 'Nov',
    'file' => 'TML1997/TDL00L54.TXT',
    'day' => '30',
    'year' => 1997,
    'ts' => '1997Nov30',
    'id' => undef,
