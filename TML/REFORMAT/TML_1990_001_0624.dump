X
X	if ((argc < 3) || (argc > 4))
X	{
X		printf("Usage: sysgen X Y [Z]\\n");
X		exit(1);
X	}
X	x = atol(argv[1]);
X	y = atol(argv[2]);
X	if (argc == 4)
X		z = atol(argv[3]);
X	else
X		z = 0L;
X
X	if (mainwrld(&mw, x, y, z) == 0)
X		exit(0);
X	printf("%c%1x%1x%1x%1x%1x%1x-%x %c%c%c %8ld %8ld %8ld %s\\n",
X		mw.starport, mw.size,
X		mw.atmos, mw.hydro, mw.pop, mw.gov, mw.law,
