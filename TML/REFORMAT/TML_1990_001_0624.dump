X		(mw.bases&SCOUT_BASE)? \'S\' : \' \',
X		(mw.bases&LOCAL_BASE)? \'M\' : \' \',
X		x, y, z, mw.name);
X	exit(1);
X}
END_OF_FILE
if test 613 -ne `wc -c <\'sysgen1.c\'`; then
